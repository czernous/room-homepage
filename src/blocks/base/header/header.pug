mixin header(...links)
  nav.navbar
    svg.navbar__logo(width='10%', height='10%')
      use(xlink:href='#logo')
    ul.nav-links
      each link in links
        li.nav-links__item
          a.link(href=link.href)= link.name
  nav.navbar-mobile
    ul.nav-links
      each link in links
        li.nav-links__item
          a.link(href=link.href)= link.name
